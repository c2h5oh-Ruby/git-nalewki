<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Nazwa</th>
    <th>Przepis</th>
    <th>Skladniki</th>
    <th>Cena</th>
    <th>Trudnosc</th>
    <th>Autor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.nazwa %></td>
    <td><%= recipe.przepis %></td>
    <td><%= recipe.skladniki %></td>
    <td><%= recipe.cena %></td>
    <td><%= recipe.trudnosc %></td>
    <td><%= recipe.autor %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= form_tag recipes_path, :method => :get, :remote => true do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<br />

<%= link_to 'New Recipe', new_recipe_path %>
