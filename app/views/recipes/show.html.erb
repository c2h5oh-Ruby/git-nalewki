<div id="container">
<div id="topPan">
	<img src="../images/logo.gif" title="Liqidity Graph" alt="Liqidity Graph" width="260" height="56" border="0" class="logo" />
	<ul>
		<li><%= link_to "Katalog", recipes_path %></li>
		<li><%= link_to 'Dodaj', new_recipe_path %></li>
		<li><%= link_to_rpx "Zaloguj sie", user_session_url %> </li>
	</ul>
</div>
<p id="notice"><%= notice %></p>
<div id="bodymiddleMainPan">
		<h2>  <%= @recipe.nazwa %></h2>

<p>
<%= image_tag @recipe.photo.url(:small) %>
</p>
<p>
  <b>Przepis:</b>
  <%= @recipe.przepis %>
</p>

<p>
  <b>Skladniki:</b>
  <%= @recipe.skladniki %>
</p>

<p>
  <b>Cena:</b>
  <%= @recipe.cena %>
</p>

<p>
  <b>Trudnosc:</b>
  <%= @recipe.trudnosc %>
</p>

<p>
  <b>Autor:</b>
  <%= @recipe.autor %>
</p>
<p>
<% if @recipe.comments.any? %>
  <h2>Komentarze</h2>
  <%= render @recipe.comments %>
<% end %>
</p>
<p>
<h2>Dodaj komentarz</h2>
<%= render 'comments/form' %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
</div>
</div>